Daten = open('/Users/haukeschnepel/Desktop/Python/Projects/bestsellers2.txt')
Liste = []
i = 0
for j in Daten:
    j_Liste = j.split('\t')
    Liste.append(j_Liste)
    i += 1

print(Liste)
# ------------------
# Claudios part (questions 1 & 2)

